<Window x:Class="scientific_calculator_cs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:scientific_calculator_cs"
        mc:Ignorable="d"
        Title="Scientific Calculator" Height="550" Width="400" ResizeMode="NoResize">
    <Grid Background="#FF252525">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Display Area -->
        <Border Grid.Row="0" Background="#FF333333" Padding="10" Margin="5" CornerRadius="5">
            <StackPanel>
                <TextBlock x:Name="txtHistory" HorizontalAlignment="Right" FontSize="14" Foreground="#FFAAAAAA" Margin="0,0,0,5"/>
                <TextBox x:Name="txtDisplay" HorizontalAlignment="Right" FontSize="24" Foreground="White" 
                         Background="Transparent" BorderThickness="0" IsReadOnly="True" Text="0" TextAlignment="Right"/>
            </StackPanel>
        </Border>

        <!-- Button Grid -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Row 0 -->
            <Button x:Name="btnClear" Content="C" Grid.Row="0" Grid.Column="0" Style="{StaticResource OperatorButton}" Click="Button_Click"/>
            <Button x:Name="btnPlusMinus" Content="±" Grid.Row="0" Grid.Column="1" Style="{StaticResource OperatorButton}" Click="Button_Click"/>
            <Button x:Name="btnPercent" Content="%" Grid.Row="0" Grid.Column="2" Style="{StaticResource OperatorButton}" Click="Button_Click"/>
            <Button x:Name="btnBackspace" Content="⌫" Grid.Row="0" Grid.Column="3" Style="{StaticResource OperatorButton}" Click="Button_Click"/>
            <Button x:Name="btnDivide" Content="÷" Grid.Row="0" Grid.Column="4" Style="{StaticResource FunctionButton}" Click="Button_Click"/>

            <!-- Row 1 -->
            <Button x:Name="btnSin" Content="sin" Grid.Row="1" Grid.Column="0" Style="{StaticResource ScientificButton}" Click="ScientificButton_Click"/>
            <Button x:Name="btnCos" Content="cos" Grid.Row="1" Grid.Column="1" Style="{StaticResource ScientificButton}" Click="ScientificButton_Click"/>
            <Button x:Name="btnTan" Content="tan" Grid.Row="1" Grid.Column="2" Style="{StaticResource ScientificButton}" Click="ScientificButton_Click"/>
            <Button x:Name="btnPi" Content="π" Grid.Row="1" Grid.Column="3" Style="{StaticResource ScientificButton}" Click="ScientificButton_Click"/>
            <Button x:Name="btnMultiply" Content="×" Grid.Row="1" Grid.Column="4" Style="{StaticResource FunctionButton}" Click="Button_Click"/>

            <!-- Row 2 -->
            <Button x:Name="btnLog" Content="log" Grid.Row="2" Grid.Column="0" Style="{StaticResource ScientificButton}" Click="ScientificButton_Click"/>
            <Button x:Name="btnLn" Content="ln" Grid.Row="2" Grid.Column="1" Style="{StaticResource ScientificButton}" Click="ScientificButton_Click"/>
            <Button x:Name="btnExp" Content="e^x" Grid.Row="2" Grid.Column="2" Style="{StaticResource ScientificButton}" Click="ScientificButton_Click"/>
            <Button x:Name="btnSqrt" Content="√" Grid.Row="2" Grid.Column="3" Style="{StaticResource ScientificButton}" Click="ScientificButton_Click"/>
            <Button x:Name="btnMinus" Content="-" Grid.Row="2" Grid.Column="4" Style="{StaticResource FunctionButton}" Click="Button_Click"/>

            <!-- Row 3 -->
            <Button x:Name="btnSeven" Content="7" Grid.Row="3" Grid.Column="0" Style="{StaticResource NumberButton}" Click="NumberButton_Click"/>
            <Button x:Name="btnEight" Content="8" Grid.Row="3" Grid.Column="1" Style="{StaticResource NumberButton}" Click="NumberButton_Click"/>
            <Button x:Name="btnNine" Content="9" Grid.Row="3" Grid.Column="2" Style="{StaticResource NumberButton}" Click="NumberButton_Click"/>
            <Button x:Name="btnOpenParen" Content="(" Grid.Row="3" Grid.Column="3" Style="{StaticResource OperatorButton}" Click="Button_Click"/>
            <Button x:Name="btnPlus" Content="+" Grid.Row="3" Grid.Column="4" Style="{StaticResource FunctionButton}" Click="Button_Click"/>

            <!-- Row 4 -->
            <Button x:Name="btnFour" Content="4" Grid.Row="4" Grid.Column="0" Style="{StaticResource NumberButton}" Click="NumberButton_Click"/>
            <Button x:Name="btnFive" Content="5" Grid.Row="4" Grid.Column="1" Style="{StaticResource NumberButton}" Click="NumberButton_Click"/>
            <Button x:Name="btnSix" Content="6" Grid.Row="4" Grid.Column="2" Style="{StaticResource NumberButton}" Click="NumberButton_Click"/>
            <Button x:Name="btnCloseParen" Content=")" Grid.Row="4" Grid.Column="3" Style="{StaticResource OperatorButton}" Click="Button_Click"/>
            <Button x:Name="btnEquals" Content="=" Grid.Row="4" Grid.Column="4" Style="{StaticResource EqualsButton}" Click="Button_Click"/>

            <!-- Row 5 -->
            <Button x:Name="btnOne" Content="1" Grid.Row="5" Grid.Column="0" Style="{StaticResource NumberButton}" Click="NumberButton_Click"/>
            <Button x:Name="btnTwo" Content="2" Grid.Row="5" Grid.Column="1" Style="{StaticResource NumberButton}" Click="NumberButton_Click"/>
            <Button x:Name="btnThree" Content="3" Grid.Row="5" Grid.Column="2" Style="{StaticResource NumberButton}" Click="NumberButton_Click"/>
            <Button x:Name="btnPower" Content="x^y" Grid.Row="5" Grid.Column="3" Style="{StaticResource ScientificButton}" Click="ScientificButton_Click"/>
            <Button x:Name="btnFactorial" Content="n!" Grid.Row="5" Grid.Column="4" Style="{StaticResource ScientificButton}" Click="ScientificButton_Click"/>

            <!-- Row 6 -->
            <Button x:Name="btnZero" Content="0" Grid.Row="6" Grid.Column="0" Style="{StaticResource NumberButton}" Click="NumberButton_Click"/>
            <Button x:Name="btnDecimal" Content="." Grid.Row="6" Grid.Column="1" Style="{StaticResource NumberButton}" Click="NumberButton_Click"/>
            <Button x:Name="btnEE" Content="EE" Grid.Row="6" Grid.Column="2" Style="{StaticResource ScientificButton}" Click="ScientificButton_Click"/>
            <Button x:Name="btnMod" Content="mod" Grid.Row="6" Grid.Column="3" Style="{StaticResource ScientificButton}" Click="ScientificButton_Click"/>
            <Button x:Name="btnClearEntry" Content="CE" Grid.Row="6" Grid.Column="4" Style="{StaticResource OperatorButton}" Click="Button_Click"/>
        </Grid>
    </Grid>

    <Window.Resources>
        <Style x:Key="NumberButton" TargetType="Button">
            <Setter Property="Background" Value="#FF424242"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF525252"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF323232"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="OperatorButton" TargetType="Button">
            <Setter Property="Background" Value="#FF555555"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF656565"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF454545"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="FunctionButton" TargetType="Button">
            <Setter Property="Background" Value="#FFFF9500"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFFFA933"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFFF8A00"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ScientificButton" TargetType="Button">
            <Setter Property="Background" Value="#FF333333"/>
            <Setter Property="Foreground" Value="#FFAAAAAA"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF434343"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF232323"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EqualsButton" TargetType="Button">
            <Setter Property="Background" Value="#FFFF9500"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFFFA933"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFFF8A00"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
</Window>