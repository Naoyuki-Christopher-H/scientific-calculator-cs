<Window x:Class="scientific_calculator_cs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:scientific_calculator_cs"
        mc:Ignorable="d"
        Title="Scientific Calculator" Height="650" Width="380" ResizeMode="NoResize"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">

    <!-- Main Window Border with rounded corners -->
    <Border CornerRadius="10" Background="#FF2C2C2E" BorderThickness="1" BorderBrush="#FF48484A">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Title bar -->
                <RowDefinition Height="*"/>
                <!-- Calculator content -->
            </Grid.RowDefinitions>

            <!-- Title Bar Section -->
            <Grid Grid.Row="0" Background="Transparent" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Window Title -->
                <TextBlock Text="Scientific Calculator" Foreground="White" FontSize="12" 
                           VerticalAlignment="Center" Margin="10,0,0,0"/>

                <!-- Window Control Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="btnMinimize" Content="─" 
                            Style="{StaticResource TitleBarButton}" Click="btnMinimize_Click"/>
                    <Button x:Name="btnMaximize" Content="□" 
                            Style="{StaticResource TitleBarButton}" Click="btnMaximize_Click"/>
                    <Button x:Name="btnClose" Content="✕" 
                            Style="{StaticResource TitleBarCloseButton}" Click="btnClose_Click"/>
                </StackPanel>
            </Grid>

            <!-- Calculator Display Area -->
            <Border Grid.Row="0" Background="Transparent" Padding="15" Margin="0,25,0,0">
                <StackPanel>
                    <!-- History display showing previous operations -->
                    <TextBlock x:Name="txtHistory" HorizontalAlignment="Right" FontSize="16" 
                               Foreground="#FF8E8E93" Margin="0,0,0,5" TextTrimming="CharacterEllipsis"/>
                    <!-- Main display for current input/results -->
                    <TextBox x:Name="txtDisplay" HorizontalAlignment="Right" FontSize="40" Foreground="White" 
                             Background="Transparent" BorderThickness="0" IsReadOnly="True" Text="0" 
                             TextAlignment="Right" FontWeight="Light" Padding="0"/>
                </StackPanel>
            </Border>

            <!-- Calculator Button Grid -->
            <Grid Grid.Row="1" Margin="10,0,10,10">
                <!-- 7 rows and 5 columns for buttons -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Row 0: Mode and Clear buttons -->
                <Button x:Name="btnRadDeg" Content="Rad" Grid.Row="0" Grid.Column="0" 
                        Style="{StaticResource LightGrayButton}" Click="RadDegButton_Click"/>
                <Button x:Name="btnSecond" Content="2nd" Grid.Row="0" Grid.Column="1" 
                        Style="{StaticResource LightGrayButton}" Click="SecondButton_Click"/>
                <Button x:Name="btnClear" Content="C" Grid.Row="0" Grid.Column="2" 
                        Style="{StaticResource LightGrayButton}" Click="Button_Click"/>
                <Button x:Name="btnPlusMinus" Content="±" Grid.Row="0" Grid.Column="3" 
                        Style="{StaticResource LightGrayButton}" Click="Button_Click"/>
                <Button x:Name="btnDivide" Content="÷" Grid.Row="0" Grid.Column="4" 
                        Style="{StaticResource OrangeButton}" Click="Button_Click"/>

                <!-- Row 1: Trigonometric functions -->
                <Button x:Name="btnSin" Content="sin" Grid.Row="1" Grid.Column="0" 
                        Style="{StaticResource DarkGrayButton}" Click="ScientificButton_Click"/>
                <Button x:Name="btnCos" Content="cos" Grid.Row="1" Grid.Column="1" 
                        Style="{StaticResource DarkGrayButton}" Click="ScientificButton_Click"/>
                <Button x:Name="btnTan" Content="tan" Grid.Row="1" Grid.Column="2" 
                        Style="{StaticResource DarkGrayButton}" Click="ScientificButton_Click"/>
                <Button x:Name="btnPi" Content="π" Grid.Row="1" Grid.Column="3" 
                        Style="{StaticResource DarkGrayButton}" Click="ScientificButton_Click"/>
                <Button x:Name="btnMultiply" Content="×" Grid.Row="1" Grid.Column="4" 
                        Style="{StaticResource OrangeButton}" Click="Button_Click"/>

                <!-- Row 2: Logarithmic functions -->
                <Button x:Name="btnLog" Content="log" Grid.Row="2" Grid.Column="0" 
                        Style="{StaticResource DarkGrayButton}" Click="ScientificButton_Click"/>
                <Button x:Name="btnLn" Content="ln" Grid.Row="2" Grid.Column="1" 
                        Style="{StaticResource DarkGrayButton}" Click="ScientificButton_Click"/>
                <Button x:Name="btnExp" Content="e^x" Grid.Row="2" Grid.Column="2" 
                        Style="{StaticResource DarkGrayButton}" Click="ScientificButton_Click"/>
                <Button x:Name="btnSqrt" Content="√" Grid.Row="2" Grid.Column="3" 
                        Style="{StaticResource DarkGrayButton}" Click="ScientificButton_Click"/>
                <Button x:Name="btnMinus" Content="-" Grid.Row="2" Grid.Column="4" 
                        Style="{StaticResource OrangeButton}" Click="Button_Click"/>

                <!-- Row 3: Numbers 7-9 -->
                <Button x:Name="btnSeven" Content="7" Grid.Row="3" Grid.Column="0" 
                        Style="{StaticResource NumberButton}" Click="NumberButton_Click"/>
                <Button x:Name="btnEight" Content="8" Grid.Row="3" Grid.Column="1" 
                        Style="{StaticResource NumberButton}" Click="NumberButton_Click"/>
                <Button x:Name="btnNine" Content="9" Grid.Row="3" Grid.Column="2" 
                        Style="{StaticResource NumberButton}" Click="NumberButton_Click"/>
                <Button x:Name="btnOpenParen" Content="(" Grid.Row="3" Grid.Column="3" 
                        Style="{StaticResource DarkGrayButton}" Click="Button_Click"/>
                <Button x:Name="btnPlus" Content="+" Grid.Row="3" Grid.Column="4" 
                        Style="{StaticResource OrangeButton}" Click="Button_Click"/>

                <!-- Row 4: Numbers 4-6 -->
                <Button x:Name="btnFour" Content="4" Grid.Row="4" Grid.Column="0" 
                        Style="{StaticResource NumberButton}" Click="NumberButton_Click"/>
                <Button x:Name="btnFive" Content="5" Grid.Row="4" Grid.Column="1" 
                        Style="{StaticResource NumberButton}" Click="NumberButton_Click"/>
                <Button x:Name="btnSix" Content="6" Grid.Row="4" Grid.Column="2" 
                        Style="{StaticResource NumberButton}" Click="NumberButton_Click"/>
                <Button x:Name="btnCloseParen" Content=")" Grid.Row="4" Grid.Column="3" 
                        Style="{StaticResource DarkGrayButton}" Click="Button_Click"/>
                <Button x:Name="btnEquals" Content="=" Grid.Row="4" Grid.Column="4" 
                        Style="{StaticResource OrangeButton}" Click="Button_Click"/>

                <!-- Row 5: Numbers 1-3 -->
                <Button x:Name="btnOne" Content="1" Grid.Row="5" Grid.Column="0" 
                        Style="{StaticResource NumberButton}" Click="NumberButton_Click"/>
                <Button x:Name="btnTwo" Content="2" Grid.Row="5" Grid.Column="1" 
                        Style="{StaticResource NumberButton}" Click="NumberButton_Click"/>
                <Button x:Name="btnThree" Content="3" Grid.Row="5" Grid.Column="2" 
                        Style="{StaticResource NumberButton}" Click="NumberButton_Click"/>
                <Button x:Name="btnPower" Content="x^y" Grid.Row="5" Grid.Column="3" 
                        Style="{StaticResource DarkGrayButton}" Click="ScientificButton_Click"/>
                <Button x:Name="btnFactorial" Content="x!" Grid.Row="5" Grid.Column="4" 
                        Style="{StaticResource DarkGrayButton}" Click="ScientificButton_Click"/>

                <!-- Row 6: Zero and decimal -->
                <Button x:Name="btnZero" Content="0" Grid.Row="6" Grid.Column="0" 
                        Style="{StaticResource NumberButton}" Click="NumberButton_Click"
                        Grid.ColumnSpan="2" HorizontalContentAlignment="Left" Padding="25,0,0,0"/>
                <Button x:Name="btnDecimal" Content="." Grid.Row="6" Grid.Column="2" 
                        Style="{StaticResource NumberButton}" Click="NumberButton_Click"/>
                <Button x:Name="btnEE" Content="EE" Grid.Row="6" Grid.Column="3" 
                        Style="{StaticResource DarkGrayButton}" Click="ScientificButton_Click"/>
                <Button x:Name="btnMod" Content="mod" Grid.Row="6" Grid.Column="4" 
                        Style="{StaticResource DarkGrayButton}" Click="ScientificButton_Click"/>
            </Grid>
        </Grid>
    </Border>

    <!-- Window Resources - All Styles Defined Here -->
    <Window.Resources>
        <!-- Title Bar Button Style -->
        <Style x:Key="TitleBarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Width" Value="35"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!-- Hover effect -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3A3A3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Close Button Style (extends TitleBarButton) -->
        <Style x:Key="TitleBarCloseButton" TargetType="Button" BasedOn="{StaticResource TitleBarButton}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFE24646"/>
                    <!-- Red color on hover -->
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Number Button Style (dark gray buttons for 0-9) -->
        <Style x:Key="NumberButton" TargetType="Button">
            <Setter Property="Background" Value="#FF1C1C1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <!-- Rounded corners for Apple-style buttons -->
                        <Border Background="{TemplateBinding Background}" CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <!-- Hover effect -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF2C2C2E"/>
                </Trigger>
                <!-- Pressed effect -->
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF3A3A3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Dark Gray Button Style (for functions like sin, cos, etc.) -->
        <Style x:Key="DarkGrayButton" TargetType="Button" BasedOn="{StaticResource NumberButton}">
            <Setter Property="Background" Value="#FF2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <!-- Smaller font for function buttons -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3D3D40"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF4D4D50"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Light Gray Button Style (for mode buttons like Rad/Deg) -->
        <Style x:Key="LightGrayButton" TargetType="Button" BasedOn="{StaticResource DarkGrayButton}">
            <Setter Property="Background" Value="#FF3A3A3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4A4A4C"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF5A5A5C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Orange Button Style (for operators like +, -, ×, ÷) -->
        <Style x:Key="OrangeButton" TargetType="Button" BasedOn="{StaticResource NumberButton}">
            <Setter Property="Background" Value="#FFFF9F0A"/>
            <!-- Apple calculator orange -->
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="24"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFFFB340"/>
                    <!-- Lighter orange on hover -->
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFFFC773"/>
                    <!-- Even lighter when pressed -->
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
</Window>